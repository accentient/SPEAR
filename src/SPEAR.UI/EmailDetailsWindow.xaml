<Window x:Class="UI.EmailDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UI"
        Title="Email Details" Height="750" Width="1050" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <local:BodyTemplateSelector x:Key="BodyTemplateSelector"/>
        <DataTemplate x:Key="PlainTextTemplate">
            <TextBox Text="{Binding Body}" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap"/>
        </DataTemplate>
        <DataTemplate x:Key="HtmlTemplate">
            <WebBrowser x:Name="BodyBrowser" Loaded="BodyBrowser_Loaded"/>
        </DataTemplate>
        <local:CommaVisibilityConverter x:Key="CommaVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Date -->
            <RowDefinition Height="Auto"/> <!-- Sender -->
            <RowDefinition Height="Auto"/> <!-- To -->
            <RowDefinition Height="Auto"/> <!-- CC -->
            <RowDefinition Height="Auto"/> <!-- BCC -->
            <RowDefinition Height="Auto"/> <!-- Subject -->
            <RowDefinition Height="3*"/>   <!-- Body (bigger) -->
            <RowDefinition Height="Auto"/> <!-- Source + Close button -->
        </Grid.RowDefinitions>

        <TextBlock Text="Date:" FontWeight="Bold"/>
        <TextBlock Text="{Binding Date}" Grid.Row="0" Margin="70,0,0,0"/>

        <TextBlock Text="Sender:" FontWeight="Bold" Grid.Row="1"/>
        <TextBlock Text="{Binding Sender}" Grid.Row="1" Margin="70,0,0,0"/>

        <TextBlock Text="To:" FontWeight="Bold" Grid.Row="2"/>
        <TextBox Text="{Binding To}" Grid.Row="2" Margin="70,0,0,0"
                 IsReadOnly="True" TextWrapping="Wrap"
                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                 BorderThickness="0" MinHeight="20"/>

        <TextBlock Text="CC:" FontWeight="Bold" Grid.Row="3"/>
        <TextBox Text="{Binding CC}" Grid.Row="3" Margin="70,0,0,0"
                 IsReadOnly="True" TextWrapping="Wrap"
                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                 BorderThickness="0" MinHeight="20"/>

        <TextBlock Text="BCC:" FontWeight="Bold" Grid.Row="4"/>
        <TextBox Text="{Binding BCC}" Grid.Row="4" Margin="70,0,0,0"
                 IsReadOnly="True" TextWrapping="Wrap"
                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                 BorderThickness="0" MinHeight="20"/>

        <TextBlock Text="Subject:" FontWeight="Bold" Grid.Row="5"/>
        <TextBlock Text="{Binding Subject}" Grid.Row="5" Margin="70,0,0,0"/>

        <!-- Body field, much larger -->
        <Grid Grid.Row="6" Margin="0,10,0,10">
            <Grid.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="FontFamily" Value="Consolas"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </Grid.Resources>
            <ContentControl Content="{Binding}" ContentTemplateSelector="{StaticResource BodyTemplateSelector}"/>
        </Grid>

        <!-- Source and Attachments and Close button aligned at the bottom -->
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Source: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding Source}" Margin="0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Attachments:" FontWeight="Bold" Margin="0,0,5,0"/>
                    <ItemsControl ItemsSource="{Binding Attachments}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock>
                                        <Hyperlink Click="AttachmentHyperlink_Click" Tag="{Binding}">
                                            <Run Text="{Binding Name}"/>
                                        </Hyperlink>
                                    </TextBlock>
                                    <TextBlock Text=", ">
                                        <TextBlock.Visibility>
                                            <MultiBinding Converter="{StaticResource CommaVisibilityConverter}">
                                                <Binding Path="DataContext.Attachments" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                <Binding />
                                            </MultiBinding>
                                        </TextBlock.Visibility>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
            <Button Content="Close" Grid.Column="1" Height="32" Width="100" HorizontalAlignment="Right" Margin="20,0,0,0" Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>